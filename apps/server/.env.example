# Copy to .env and fill in values before running locally.
# In production these are set as Render environment variables.

NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Generate with: openssl rand -hex 32
JWT_SECRET=replace-me-with-a-random-64-char-string
JWT_REFRESH_SECRET=replace-me-with-a-different-random-64-char-string

# Redis â€” leave blank to use the in-memory fallback in dev
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:5173
