# ─── Server ────────────────────────────────────────────────────────────────────
SERVER_PORT=3000

# REQUIRED: Generate with: openssl rand -hex 64
JWT_SECRET=replace_me_with_64_random_hex_chars
JWT_REFRESH_SECRET=replace_me_with_another_64_random_hex_chars

# ─── Redis ─────────────────────────────────────────────────────────────────────
REDIS_PORT=6379
REDIS_PASSWORD=changeme

# ─── CORS ──────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:5173

# ─── Relay Limits ──────────────────────────────────────────────────────────────
# Max encrypted message size in bytes (default 64KB)
MAX_MESSAGE_SIZE_BYTES=65536
# Server will warn user to upload more prekeys when below this count
PREKEY_REFILL_THRESHOLD=10
# How long (seconds) to hold offline-delivery messages (default 7 days)
OFFLINE_MESSAGE_TTL_SECONDS=604800

# ─── Web Client ────────────────────────────────────────────────────────────────
WEB_PORT=5173
VITE_SERVER_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000

# ─── WebRTC / TURN ─────────────────────────────────────────────────────────────
TURN_USERNAME=wasp
TURN_PASSWORD=changeme
